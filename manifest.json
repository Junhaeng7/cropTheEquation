{
  "manifest_version": 3,
  "name": "Image Crop and Download",
  "version": "1.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "html2canvas.min.js",
        "contentScript.js",
        "https://unpkg.com/jcrop"
      ],
      "css": ["https://unpkg.com/jcrop/dist/jcrop.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["*://*/*"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
